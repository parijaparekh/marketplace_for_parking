<div class="row">
  <div class="col-auto">
      <h5>Address: {{parkingSlotInfo.address.slotNo}}, {{parkingSlotInfo.address.street_number}} {{parkingSlotInfo.address.street_name}}, {{parkingSlotInfo.address.suburb}}, {{parkingSlotInfo.address.state}}-{{parkingSlotInfo.address.postcode}}<br>
        Location Tag: {{parkingSlotInfo.locationTags.locationTag}}<br>
    </h5>
    </div>

        {{#if parkingSlotInfo.parkingDatesAvailable}}
            <table id="parkingSlotsDate_"+{{parkingSlotInfo.id}} class="table table-striped table-bordered" style="width:100%">
                <caption>Available Dates</caption>
                <thead>
                    <tr>          
                        <th>Date</th>
                        <th>Rate</th>
                        <th>Delete</th>
                        <th>Modify</th>
                    </tr>
                </thead>
           {{#each parkingSlotInfo.parkingDatesAvailable as  |parkingDate|}}           
                <tbody>
                    <tr id={{parkingDate.id}}>
                        <td><input type="text" name="Date" id="date_{{parkingDate.id}}" value={{parkingDate.date}} readonly></td>
                        <td><input type="text" name="Rate" id="rate_{{parkingDate.id}}" value={{parkingDate.rate}} readonly></td>
                        <td>
                            <button type="click" class="btn btn-success"  name="delete_{{parkingDate.id}}" id="delete" data-id={{parkingDate.id}}>Delete</button>
                        </td>
                        <td>
                            <button type="click" class="btn btn-success" name="edit_{{parkingDate.id}}" id="edit" data-id={{parkingDate.id}}>Edit</button>
                        </td>                       
                    </tr>
                </tbody>
            {{/each}}
            </table>
        {{/if}}
        {{#if parkingSlotInfo.bookedSlots}}
            <table id="parkingSlotsDate_"+{{parkingSlotInfo.id}} class="table table-striped table-bordered" style="width:100%">
                <caption>Booked Dates</caption>
                <thead>
                    <tr>          
                        <th>Date</th>
                        <th>Rate</th>
                        <th>Booked By</th>
                    </tr>
                </thead>
            {{#each parkingSlotInfo.bookedSlots as  |bookedSlot|}}
                <tbody>
                    <tr id={{bookedSlot.id}}>
                        <td><input type="text" name="Date" id="date_{{bookedSlot.id}}" value="{{bookedSlot.dateTimeFrom}}" readonly></td>
                        <td><input type="text" name="Rate" id="rate_{{bookedSlot.id}}" value={{bookedSlot.price}} readonly></td>
                        <td><input type="text" name="Booked By:" id="bookedBy_{{bookedSlot.id}}" value="{{bookedSlot.user.first_name}} {{bookedSlot.user.last_name}}" readonly></td> 
                    </tr>
                </tbody>
            {{/each}}
            </table>
        {{/if}}
</div>
     

<script src="/js/dashboardDetails.js"></script>